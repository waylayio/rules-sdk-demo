[
  {
    "name": "Data and delay",
    "description": "Wait a second when data comes in",
    "properties": {
      "resource": {
        "type": "string"
      }
    },
    "plugins": [
      {
        "name":"stream",
        "type": "sensor",
        "version": "1.0.1",
        "properties": {
          "resource": "<%properties.resource%>"
        },
        "dataTrigger": true,
        "tickTrigger": false,
        "triggers": [
          "Data"
        ]
      },
      {
        "name": "delaySensor",
        "version": "0.0.1",
        "type": "sensor",
        "properties": {
          "delay": 1000
        },
        "dataTrigger": false,
        "tickTrigger": false,
        "triggers": [
          "Triggered"
        ]
      }
    ]
  },
  {
    "name": "threshold crossed",
    "description": "check if the the treshold for the passed metric is crossed",
    "properties": {
      "resource": { "type": "string" },
      "metric": { "type": "string" },
      "aggregate": { "type": "string" },
      "duration": { "type": "string" },
      "threshold": { "type": "number" }
    },
    "plugins": [
      {
        "name": "getMetricValue",
        "type": "sensor",
        "version": "2.0.5",
        "properties": {
          "resource": "<%properties.resource%>",
          "metric": "<%properties.metric%>",
          "aggregate": "<%properties.aggregate%>",
          "duration": "<%properties.duration%>"
        },
        "tickTrigger":true,
        "dataTrigger":false,
        "triggers": [
          "Collected"
        ]
      },
      {
        "name": "Function",
        "version": "1.0.1",
        "type": "sensor",
        "properties": {
          "formula": "${nodes.getMetricValue_1.rawData.result}",
          "threshold": "<%properties.threshold%>"
        },
        "dataTrigger": false,
        "tickTrigger": false,
        "triggers": [
          "Above"
        ]
      }
    ]
  },
  {
    "name": "alert message",
    "description": "sends an alarm",
    "properties": {
      "message": {
        "type": "string"
      }
    },
    "plugins": [
      {
        "name": "debugDialog",
        "version": "1.0.4",
        "type": "actuator",
        "properties": {
          "message": "<%properties.message%>"
        }
      }
    ]
  }
]